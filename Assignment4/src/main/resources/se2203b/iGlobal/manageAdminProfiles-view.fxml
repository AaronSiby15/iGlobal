<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="634.0" style="-fx-background-color: #E0E0E0;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se2203b.iGlobal.ManageAdminProfilesController">

    <VBox alignment="TOP_CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <!-- Title -->
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Manage Administrator Profiles" />

        <!-- Add Button -->
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="btnAddAdmin" onAction="#addAdmin" text="Add New Admin" />
        </HBox>

        <!-- TableView for Administrator Data -->
        <TableView fx:id="adminsTable" prefHeight="250.0">
            <columns>
                <TableColumn fx:id="colFirstName" prefWidth="92.0" text="First Name" />
                <TableColumn fx:id="colLastName" prefWidth="91.0" text="Last Name" />
                <TableColumn fx:id="colEmail" prefWidth="97.0" text="Email Address" />
                <TableColumn fx:id="colPhone" prefWidth="127.0" text="Phone Number" />
                <TableColumn fx:id="colDateCreated" prefWidth="205.5999816894531" text="Date Hired/Created" />
            </columns>
        </TableView>

        <!-- Action Buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="btnRemoveAdmin" onAction="#removeAdmin" style="-fx-text-fill: red;" text="Remove">
            <HBox.margin>
               <Insets right="500.0" />
            </HBox.margin></Button>
            <Button fx:id="btnExit" onAction="#closeWindow" text="Exit" />
        </HBox>
    </VBox>

</AnchorPane>
